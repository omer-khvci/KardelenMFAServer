
@{
    ViewBag.Title = "Login";
}

<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Login</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body>

    <form method="post">

        <div style="padding-top:50px;">

            <div class="row">

                <div class="col-sm-2"><label>User Name</label></div>

                <div class="col-sm-4"><input type="text" name="username" class="form-control" /></div>

                <div class="col-sm-2"></div>

            </div>

            <div class="help-block"></div>

            <div class="row">

                <div class="col-sm-2"><label>Password</label></div>

                <div class="col-sm-4"><input type="password" name="password" class="form-control" /></div>

                <div class="col-sm-6"></div>

            </div>

            <div class="help-block"></div>

            <div class="row">



                <div class="col-sm-2"></div>

                <div class="col-sm-4"><input type="submit" class="btn btn-success" /></div>

                <div class="col-sm-6"></div>

            </div>

        </div>

    </form>

</body>

</html>

