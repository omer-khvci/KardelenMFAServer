
@{
    ViewBag.Title = "VerifyAuth";
}
<head>

    <meta name="viewport" content="width=device-width" />

    <title>Verify Auth</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

</head>
<form method="post">
    <div style="padding-top:50px">
        <div class="media">
            <h5 class="mt-0">Karekodu Okutup Google Authenticator gelen kodu giriniz...</h5>
            <img src="@ViewBag.qrcode" alt="Karekod" class="media-right" />

            <div class="media-body">

                <input type="text" name="passcode" placeholder="enter 6 digit code here...." class="form-control" /><br /><br />
                <input type="submit" value="Giriş Yap" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
